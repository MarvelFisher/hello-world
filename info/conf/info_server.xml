<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd"
>

	<context:annotation-config />

	<import resource="info_persistence.xml" />
	
	<bean id="infoServer" class="com.cyanspring.info.InfoServer">
		<property name = "plugins">
	        <list>
            	<ref bean="alertManager"/>
            	<ref bean="historicalInfoManager"/>
            	<ref bean="marketInfoManager"/>
	        </list>
		</property>
	</bean>
	
	<bean id="alertManager" class="com.cyanspring.info.alert.AlertManager">
		<property name="timeoutSecond" value="3000" />
		<property name="createThreadCount" value="5" />
		<property name="maxRetrytimes" value="3" />
		<property name="killTimeoutSecond" value="60000" />
		<property name="parseApplicationId" value="NSJUuK6ePPmFPaatYUuRCoySVcgVNMQbyZMrrN8D" />
		<property name="parseRestApiId" value="Jss9g8JzivcLTaO8ESUgcte69VnlvHqNuhxCgDNx" />
	</bean>

	<bean id="historicalInfoManager" class="com.cyanspring.info.market.HistoricalInfoManager">
	</bean>

	<bean id="marketInfoManager" class="com.cyanspring.info.market.MarketInfoManager">
	</bean>

	<bean id="systemInfo" class="com.cyanspring.common.SystemInfo">
		<property name="env">
			<value>Test</value>
		</property>
		<property name="category">
			<value>Info</value>
		</property>
		<property name="id">
			<value>I1</value>
		</property>
	</bean>	
	
	<bean id="systemInfoMD" class="com.cyanspring.common.SystemInfo">
		<property name="env">
			<value>Test</value>
		</property>
		<property name="category">
			<value>EB</value>
		</property>
		<property name="id">
			<value>S1</value>
		</property>
	</bean>	
	
	<bean id="scheduleManager" class="com.cyanspring.common.event.ScheduleManager">
	</bean>

	<bean id="transportService" class="com.cyanspring.transport.ActiveMQObjectService">
		<property name="url" value="nio://localhost:61617"></property>
	</bean>
	
	<bean id="parseAlertSender" class="com.cyanspring.info.alert.ParseAlertSender">
		<property name="parseApplicationId" value="NSJUuK6ePPmFPaatYUuRCoySVcgVNMQbyZMrrN8D"/>
		<property name="parseRestApiId" value="Jss9g8JzivcLTaO8ESUgcte69VnlvHqNuhxCgDNx"/>
	</bean>
	
	<bean id="eventManager" class="com.cyanspring.event.RemoteEventManager">
	    <constructor-arg>
	    	<ref bean="transportService"/>
	    </constructor-arg>
		<property name="embedBroker" value="true"></property>
	</bean>

	<bean id="transportServiceMD" class="com.cyanspring.transport.ActiveMQObjectService">
		<property name="url" value="nio://localhost:61616"></property>
	</bean>
	
	<bean id="eventManagerMD" class="com.cyanspring.event.RemoteEventManager">
	    <constructor-arg>
	    	<ref bean="transportServiceMD"/>
	    </constructor-arg>
		<property name="embedBroker" value="false"></property>
	</bean>

</beans>
