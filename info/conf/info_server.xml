<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd"
>

	<context:annotation-config />

	<bean id="infoServer" class="com.cyanspring.info.InfoServer">
	</bean>

	<bean id="systemInfo" class="com.cyanspring.common.SystemInfo">
		<property name="env">
			<value>Test</value>
		</property>
		<property name="category">
			<value>Info</value>
		</property>
		<property name="id">
			<value>I1</value>
		</property>
	</bean>	
	
	<bean id="systemInfoMD" class="com.cyanspring.common.SystemInfo">
		<property name="env">
			<value>Test</value>
		</property>
		<property name="category">
			<value>EB</value>
		</property>
		<property name="id">
			<value>S1</value>
		</property>
	</bean>	
	
	<bean id="scheduleManager" class="com.cyanspring.common.event.ScheduleManager">
	</bean>

	<bean id="transportService" class="com.cyanspring.transport.ActiveMQObjectService">
		<property name="url" value="nio://localhost:61617"></property>
	</bean>
	
	<bean id="eventManager" class="com.cyanspring.event.RemoteEventManager">
	    <constructor-arg>
	    	<ref bean="transportService"/>
	    </constructor-arg>
		<property name="embedBroker" value="true"></property>
	</bean>

	<bean id="transportServiceMD" class="com.cyanspring.transport.ActiveMQObjectService">
		<property name="url" value="nio://localhost:61616"></property>
	</bean>
	
	<bean id="eventManagerMD" class="com.cyanspring.event.RemoteEventManager">
	    <constructor-arg>
	    	<ref bean="transportServiceMD"/>
	    </constructor-arg>
		<property name="embedBroker" value="false"></property>
	</bean>

</beans>
