	<bean id="indexMarketSessionManager" class="com.cyanspring.common.marketsession.IndexMarketSessionManager">
        <property name="settlementDelay"><value>45</value></property>
        <property name="eventManager" ref="eventManager"></property>        
    </bean>
    
    <bean id="marketSessionUtil" class="com.cyanspring.common.marketsession.MarketSessionUtil">
		<constructor-arg>
			<list>
				<ref bean="txSessionChecker"/>
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="txSessionChecker" class="com.cyanspring.common.marketsession.MarketSessionChecker">
		<property name="stateMap">
			<map>
				<entry key="DEFAULT">
					<ref bean="txDefaultSession"/>
				</entry>
				<entry key="FIRST_HOLIDAY">
					<ref bean="holidaySession"/>
				</entry>
				<entry key="HOLIDAY">
					<ref bean="holidaySession"/>
				</entry>
				<entry key="SETTLEMENT_DAY">
                    <ref bean="txSettlementSession"/>
                </entry>
			</map>
		</property>
		<property name="tradeDateManager"><ref bean="tradeDateManager"/></property>
		<property name="index" value="CF"/>
	</bean>
	
	<bean id="txDefaultSession" class="com.cyanspring.common.marketsession.MarketSession">
		<constructor-arg>
			<list>
				<bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>CLOSE</value></constructor-arg>
                    <constructor-arg><value>-10:15:00</value></constructor-arg>
                    <constructor-arg><value>08:00:00</value></constructor-arg>
                </bean>
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>PREMARKET</value></constructor-arg>
                    <constructor-arg><value>08:00:00</value></constructor-arg>
                    <constructor-arg><value>08:30:00</value></constructor-arg>
                </bean>
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>PREOPEN</value></constructor-arg>
                    <constructor-arg><value>08:30:00</value></constructor-arg>
                    <constructor-arg><value>08:45:00</value></constructor-arg>
                </bean> 
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>OPEN</value></constructor-arg>
                    <constructor-arg><value>08:45:00</value></constructor-arg>
                    <constructor-arg><value>13:45:00</value></constructor-arg>
                </bean>
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>CLOSE</value></constructor-arg>
                    <constructor-arg><value>13:45:00</value></constructor-arg>
                    <constructor-arg><value>32:00:00</value></constructor-arg>
                </bean>
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="holidaySession" class="com.cyanspring.common.marketsession.MarketSession">
		<constructor-arg>
			<list>
		       	<bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>CLOSE</value></constructor-arg>
                    <constructor-arg><value>00:00:00</value></constructor-arg>
                    <constructor-arg><value>24:00:00</value></constructor-arg>
                </bean>
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="tradeDateManager" class="com.cyanspring.common.marketsession.TradeDateManager">
		<constructor-arg>
            <list />
        </constructor-arg>
        <constructor-arg>
            <list>
                <value>2015-01-01</value>
                <value>2015-01-02</value>
                <value>2015-02-16</value>
                <value>2015-02-17</value>
                <value>2015-02-18</value>
                <value>2015-02-19</value>
                <value>2015-02-20</value>
                <value>2015-02-21</value>
                <value>2015-02-22</value>
                <value>2015-02-23</value>
                <value>2015-02-27</value>
                <value>2015-04-03</value>
                <value>2015-04-06</value>
                <value>2015-05-01</value>
                <value>2015-06-19</value>
                <value>2015-09-28</value>               
                <value>2015-10-09</value>
            </list>
        </constructor-arg>
	</bean>
	
	<bean id="txSettlementSession" class="com.cyanspring.common.marketsession.MarketSession">
        <constructor-arg>
            <list>
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>CLOSE</value></constructor-arg>
                    <constructor-arg><value>-10:30:00</value></constructor-arg>
                    <constructor-arg><value>08:00:00</value></constructor-arg>
                </bean>
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>PREMARKET</value></constructor-arg>
                    <constructor-arg><value>08:00:00</value></constructor-arg>
                    <constructor-arg><value>08:30:00</value></constructor-arg>
                </bean>
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>PREOPEN</value></constructor-arg>
                    <constructor-arg><value>08:30:00</value></constructor-arg>
                    <constructor-arg><value>08:45:00</value></constructor-arg>
                </bean> 
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>OPEN</value></constructor-arg>
                    <constructor-arg><value>08:45:00</value></constructor-arg>
                    <constructor-arg><value>13:30:00</value></constructor-arg>
                </bean>
                <bean class="com.cyanspring.common.marketsession.MarketSessionData">
                    <constructor-arg><value>CLOSE</value></constructor-arg>
                    <constructor-arg><value>13:30:00</value></constructor-arg>
                    <constructor-arg><value>32:00:00</value></constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>

</beans>
