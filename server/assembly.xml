<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>build</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>server</baseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/jars</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>commons-logging:commons-logging</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${basedir}/../adaptor/</directory>
			<includes>
				<include>conf/*</include>
				<include>windlib/*</include>
				<include>ctplib/**</include>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../info/</directory>
			<includes>
				<include>conf/**</include>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../soak/</directory>
			<includes>
				<include>conf/**</include>
				<include>events/*</include>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory> 
			<includes>
				<include>*.bat</include>
				<include>*.sh</include>
				<include>/backtest/**</include>
		        <include>/mm/*</include>
		        <include>/strategies/*</include>
		        <include>/templates/*</include>
				<include>/conf/**</include>
				<include>/refdata/*</include>
				<include>/database/**</include>
			</includes>
		</fileSet>    
	</fileSets>
</assembly>
